@page
@model NFTUploaderWeb.Pages.UploadModel
@{
    ViewData["Title"] = "Upload NFT";
}

<h1>@ViewData["Title"]</h1>
<p id="currentWalletAddress" class="text-lg text-gray-600 my-2"></p>

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="@Model.Nft.Image" class="control-label"></label>
        <input asp-for="@Model.Nft.Image" type="file" class="form-control-file" id="image" name="Image">
        <span asp-validation-for="@Model.Nft.Image" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Nft.Title"></label>
        <input asp-for="@Model.Nft.Title" class="form-control" id="title" name="Title">
        <span asp-validation-for="@Model.Nft.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Nft.Description"></label>
        <input asp-for="@Model.Nft.Description" class="form-control" id="description" name="Description" rows="3">
        <span asp-validation-for="@Model.Nft.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Nft.TokenSymbol"></label>
        <input type="text" class="form-control" id="tokenSymbol" name="TokenSymbol">
        <span asp-validation-for="@Model.Nft.TokenSymbol" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Nft.TokenName"></label>
        <input asp-for="@Model.Nft.TokenName" type="text" class="form-control" id="tokenName" name="TokenName">
        <span asp-validation-for="@Model.Nft.TokenName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Nft.NumberOfTokens"></label>
        <input asp-for="@Model.Nft.NumberOfTokens" type="number" class="form-control" id="numberOfTokens" name="NumberOfTokens">
        <span asp-validation-for="@Model.Nft.NumberOfTokens" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Nft.TokenPrice"></label>
        <input asp-for="@Model.Nft.TokenPrice" type="number" class="form-control" id="tokenPrice" name="TokenPrice">
        <span asp-validation-for="@Model.Nft.TokenPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Nft.RoyaltyFee"></label>
        <input asp-for="@Model.Nft.RoyaltyFee" type="number" class="form-control" id="royaltyFee" name="RoyaltyFee">
        <span asp-validation-for="@Model.Nft.RoyaltyFee" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input asp-for="@Model.Nft.CreatorAddress" type="hidden" class="form-control" id="Nft_CreatorAddress" name="CreatorAddress">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    if(window.ethereum.isConnected() === true){
        document.getElementById("Nft_CreatorAddress").value = window.ethereum.selectedAddress;
    }
</script>
