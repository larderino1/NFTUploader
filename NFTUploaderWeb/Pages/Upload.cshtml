@page
@model NFTUploaderWeb.Pages.UploadModel
@{
    ViewData["TokenTitle"] = "Upload NFT";
}

<h1>@ViewData["TokenTitle"]</h1>
<p id="currentWalletAddress" class="text-lg text-gray-600 my-2"></p>

<form id="submitForm" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="@Model.Nft.Token.Image" class="control-label"></label>
        <input asp-for="@Model.Nft.Token.Image" type="file" class="form-control-file" id="image" name="Image">
        <span asp-validation-for="@Model.Nft.Token.Image" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Nft.Token.TokenTitle"></label>
        <input asp-for="@Model.Nft.Token.TokenTitle" class="form-control" id="title" name="Title">
        <span asp-validation-for="@Model.Nft.Token.TokenTitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Nft."></label>
        <input asp-for="@Model.Nft.Token.TokenDescription" class="form-control" id="description" name="Description" rows="3">
        <span asp-validation-for="@Model.Nft.Token.TokenDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Nft.TokenSymbol"></label>
        <input type="text" class="form-control" id="tokenSymbol" name="TokenSymbol">
        <span asp-validation-for="@Model.Nft.TokenSymbol" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Nft.TokenName"></label>
        <input asp-for="@Model.Nft.TokenName" type="text" class="form-control" id="tokenName" name="TokenName">
        <span asp-validation-for="@Model.Nft.TokenName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input asp-for="@Model.Nft.CreatorAddress" type="hidden" class="form-control" name="CreatorAddress">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    document.querySelector('#submitForm').addEventListener('submit', function (event) {
        document.getElementById("Nft_CreatorAddress").value = window.ethereum.selectedAddress;
    });
</script>
